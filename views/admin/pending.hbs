	<section class="intro">
  <div class="bg-image h-100" style="background-color: #f5f7fa;">
    <div class="mask d-flex align-items-center h-100">
      <div class="container">
         {{!-- <a href="/admin/adduser" class="btn btn-danger mr-auto">Add</a> --}}
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="card">
              <div class="card-body p-0">
                <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 700px">
                  <table id="pendingtable" class="table table-striped mb-0">
                    <thead style="background-color: #be0808;">
                      <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Method</th>
                        <th scope="col">Status</th>
                        <th scope="col">Options</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each request}}
                      <tr>
                        <td>{{this.Date}}</td>
                         <td>{{this.Name}}</td>
                        <td>{{this.Phone}}</td>
                        <td>{{this.Email}}</td>
                        <td>{{this.Total}}</td>
                        <td>ONLINE</td>
                        <td>{{this.status}}</td>
                        {{!-- <td>{{this.userid}}</td> --}}
                        <td>
                           <a href="/admin/viewmore/{{this.userid}}" class="btn btn-danger">View</a>
                            <a href="/admin/accept/{{this.userid}}" class="btn btn-danger">Accept</a>
                            <a href="/admin/reject/{{this._id}}" onclick="return confirm('Are You Want to Reject this User {{this.Name}}')" class="btn btn-danger">Reject</a>
                       
                       
                       
                        </td>
                      </tr>
                      {{/each}}
                     
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
